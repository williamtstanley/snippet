<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for(@user) %>
      <h1><%= @user.full_name %></h1>
      <span><%= link_to "view my profile", @user %></span>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>

  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @title === "Followers" %>
      <% @user.followers.each do |follower| %>
        <%= link_to follower.full_name, follower %>
        <%= gravatar_for(follower, 30) %>
      <% end %>
    <% else %>
      <% @user.following.each do |follower| %>
        <%= link_to follower.full_name, follower %>
        <%= gravatar_for(follower, 30) %>
      <% end %>
    <% end %>

</div>