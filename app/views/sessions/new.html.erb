<div class="flash-container">

</div>
<div class="user-form-container">
    <div class="user-form">
        <h1>Sign In</h1>
        <%= form_tag sessions_path do %>
            <div class="input-container">
                <% if @user %>
                    <%= email_field_tag :email, @user.email, {placeholder: "Email Address"} %>
                <% else %>
                    <%= email_field_tag :email, nil, {placeholder: "Email Address"} %>
                <% end %>
            </div>
            <div class="form-link">
            <span>Forgot password? <%= link_to "reset password", new_password_reset_path %> </span>
            </div>

            <div class="input-container">
                <%= password_field_tag :password, nil, {placeholder: "Password"} %>
            </div>
            <%= submit_tag "Login", class: "button" %>
        <% end %>
    </div>
</div>
