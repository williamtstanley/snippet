<div class="user-form-container">
  <div class="user-form">
      <h1>Sign In</h1>
      <%= form_tag sessions_path do %>
        <div class="form-group">
          <%= label_tag :email %>
          <% if @user %>
              <%= email_field_tag :email, @user.email, {placeholder: "Email Address", class: "form-control"} %>
          <% else %>
              <%= email_field_tag :email, nil, {placeholder: "Email Address", class: "form-control"} %>
          <% end %>
        </div>
        <div class="form-group">
          <div>Forgot password? <%= link_to "reset password", new_password_reset_path %> </div>
        </div>
        <div class="form-group">
          <%= label_tag :password %>
          <%= password_field_tag :password, nil, {placeholder: "Password", class: "form-control"} %>
        </div>
          <%= submit_tag "Login", class: "btn btn-primary" %>

      <% end %>
  </div>
</div>










