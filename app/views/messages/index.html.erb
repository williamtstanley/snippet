<h1>The conversation so far</h1>

<% @messages.each do |message| %>
  <%= message.user.full_name %>:<br>
  <%= message.body %>
  <hr>
<% end %>

<h2>Continue it...</h2>

<%= bootstrap_form_tag url: conversation_messages_path( @messages.first.conversation ) do |f| %>
  <%= f.text_area :body %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
